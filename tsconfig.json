{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [ "ES6" ],
    "target": "es2015",
    "outDir": "./dist",
    "declaration": true,
    "removeComments": true,
    "importHelpers": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ]
}
